<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="0001-1" author="hungpd">
        <createTable tableName="author">
            <column autoIncrement="true" name="author_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_author"/>
            </column>
            <column name="created_on" type="timestamp"/>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="last_modified_on" type="timestamp"/>
            <column name="last_modified_by" type="VARCHAR(255)"/>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column defaultValueBoolean="false" name="deleted" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="0001-2" author="hungpd">
        <createTable tableName="book">
            <column autoIncrement="true" name="isbn" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_book"/>
            </column>
            <column name="created_on" type="timestamp"/>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="last_modified_on" type="timestamp"/>
            <column name="last_modified_by" type="VARCHAR(255)"/>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="detail" type="VARCHAR(1000)"/>
            <column name="no_copies" type="INT"/>
            <column name="in_stock" type="INT"/>
            <column name="cover_image" type="VARCHAR(255)"/>
            <column name="price" type="DOUBLE"/>
            <column defaultValueBoolean="false" name="deleted" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="category_id" type="BIGINT"/>
            <column name="author_id" type="BIGINT"/>
            <column name="publisher_id" type="BIGINT"/>
        </createTable>
    </changeSet>
    <changeSet id="0001-3" author="hungpd">
        <createTable tableName="category">
            <column autoIncrement="true" name="category_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_category"/>
            </column>
            <column name="created_on" type="timestamp"/>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="last_modified_on" type="timestamp"/>
            <column name="last_modified_by" type="VARCHAR(255)"/>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column defaultValueBoolean="false" name="deleted" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="0001-4" author="hungpd">
        <createTable tableName="change_email_request">
            <column autoIncrement="true" name="change_email_request_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_change_email_request"/>
            </column>
            <column name="created_on" type="timestamp"/>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="last_modified_on" type="timestamp"/>
            <column name="last_modified_by" type="VARCHAR(255)"/>
            <column name="email_from" type="VARCHAR(255)"/>
            <column name="email_to" type="VARCHAR(255)"/>
            <column name="expiration_time" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="token_from_id" type="BIGINT"/>
            <column name="token_to_id" type="BIGINT"/>
            <column name="status" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT"/>
        </createTable>
    </changeSet>
    <changeSet id="0001-5" author="hungpd">
        <createTable tableName="publisher">
            <column autoIncrement="true" name="publisher_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_publisher"/>
            </column>
            <column name="created_on" type="timestamp"/>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="last_modified_on" type="timestamp"/>
            <column name="last_modified_by" type="VARCHAR(255)"/>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="country" type="VARCHAR(255)"/>
            <column name="founded_year" type="VARCHAR(255)"/>
            <column defaultValueBoolean="false" name="deleted" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="0001-6" author="hungpd">
        <createTable tableName="reserve">
            <column autoIncrement="true" name="reserve_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_reserve"/>
            </column>
            <column name="created_on" type="timestamp"/>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="last_modified_on" type="timestamp"/>
            <column name="last_modified_by" type="VARCHAR(255)"/>
            <column name="reserve_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="return_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="due_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="total" type="DOUBLE"/>
            <column name="reserve_status" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="user_user_id" type="BIGINT"/>
        </createTable>
    </changeSet>
    <changeSet id="0001-7" author="hungpd">
        <createTable tableName="reserve_detail">
            <column autoIncrement="true" name="reserve_detail_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_reserve_detail"/>
            </column>
            <column name="created_on" type="timestamp"/>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="last_modified_on" type="timestamp"/>
            <column name="last_modified_by" type="VARCHAR(255)"/>
            <column name="quantity" type="INT"/>
            <column name="price" type="DOUBLE"/>
            <column name="book_isbn" type="BIGINT"/>
            <column name="reserve_reserve_id" type="BIGINT"/>
        </createTable>
    </changeSet>
    <changeSet id="0001-8" author="hungpd">
        <createTable tableName="role">
            <column autoIncrement="true" name="role_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_role"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="created_on" type="timestamp"/>
        </createTable>
    </changeSet>
    <changeSet id="0001-9" author="hungpd">
        <createTable tableName="token">
            <column autoIncrement="true" name="token_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_token"/>
            </column>
            <column name="token_type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created_on" type="timestamp"/>
            <column name="expiration_time" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT"/>
        </createTable>
    </changeSet>
    <changeSet id="0001-10" author="hungpd">
        <createTable tableName="user_session">
            <column name="session_id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user_session"/>
            </column>
            <column name="created_on" type="timestamp"/>
            <column name="expiration_time" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT"/>
        </createTable>
    </changeSet>
    <changeSet id="0001-11" author="hungpd">
        <createTable tableName="users">
            <column autoIncrement="true" name="user_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_users"/>
            </column>
            <column name="created_on" type="timestamp"/>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="last_modified_on" type="timestamp"/>
            <column name="last_modified_by" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password_hash" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column defaultValueBoolean="false" name="email_verified" type="boolean"/>
            <column defaultValueBoolean="false" name="phone_verified" type="boolean"/>
            <column name="status" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column defaultValueBoolean="false" name="is_using_2fa" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="secret" type="VARCHAR(255)"/>
            <column name="tot_-qr" type="VARCHAR(255)"/>
            <column name="phone" type="VARCHAR(255)"/>
            <column name="role_id" type="BIGINT"/>
        </createTable>
    </changeSet>
    <changeSet id="0001-12" author="hungpd">
        <addUniqueConstraint columnNames="name" constraintName="uc_role_name" tableName="role"/>
    </changeSet>
    <changeSet id="0001-13" author="hungpd">
        <addUniqueConstraint columnNames="email" constraintName="uc_users_email" tableName="users"/>
    </changeSet>
    <changeSet id="0001-14" author="hungpd">
        <addForeignKeyConstraint baseColumnNames="author_id" baseTableName="book" constraintName="FK_BOOK_ON_AUTHOR"
                                 referencedColumnNames="author_id" referencedTableName="author"/>
    </changeSet>
    <changeSet id="0001-15" author="hungpd">
        <addForeignKeyConstraint baseColumnNames="category_id" baseTableName="book" constraintName="FK_BOOK_ON_CATEGORY"
                                 referencedColumnNames="category_id" referencedTableName="category"/>
    </changeSet>
    <changeSet id="0001-16" author="hungpd">
        <addForeignKeyConstraint baseColumnNames="publisher_id" baseTableName="book"
                                 constraintName="FK_BOOK_ON_PUBLISHER" referencedColumnNames="publisher_id"
                                 referencedTableName="publisher"/>
    </changeSet>
    <changeSet id="0001-17" author="hungpd">
        <addForeignKeyConstraint baseColumnNames="token_from_id" baseTableName="change_email_request"
                                 constraintName="FK_CHANGE_EMAIL_REQUEST_ON_TOKEN_FROM" referencedColumnNames="token_id"
                                 referencedTableName="token"/>
    </changeSet>
    <changeSet id="0001-18" author="hungpd">
        <addForeignKeyConstraint baseColumnNames="token_to_id" baseTableName="change_email_request"
                                 constraintName="FK_CHANGE_EMAIL_REQUEST_ON_TOKEN_TO" referencedColumnNames="token_id"
                                 referencedTableName="token"/>
    </changeSet>
    <changeSet id="0001-19" author="hungpd">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="change_email_request"
                                 constraintName="FK_CHANGE_EMAIL_REQUEST_ON_USER" referencedColumnNames="user_id"
                                 referencedTableName="users"/>
    </changeSet>
    <changeSet id="0001-20" author="hungpd">
        <addForeignKeyConstraint baseColumnNames="book_isbn" baseTableName="reserve_detail"
                                 constraintName="FK_RESERVE_DETAIL_ON_BOOK_ISBN" referencedColumnNames="isbn"
                                 referencedTableName="book"/>
    </changeSet>
    <changeSet id="0001-21" author="hungpd">
        <addForeignKeyConstraint baseColumnNames="reserve_reserve_id" baseTableName="reserve_detail"
                                 constraintName="FK_RESERVE_DETAIL_ON_RESERVE_RESERVE"
                                 referencedColumnNames="reserve_id" referencedTableName="reserve"/>
    </changeSet>
    <changeSet id="0001-22" author="hungpd">
        <addForeignKeyConstraint baseColumnNames="user_user_id" baseTableName="reserve"
                                 constraintName="FK_RESERVE_ON_USER_USER" referencedColumnNames="user_id"
                                 referencedTableName="users"/>
    </changeSet>
    <changeSet id="0001-23" author="hungpd">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="token" constraintName="FK_TOKEN_ON_USER"
                                 referencedColumnNames="user_id" referencedTableName="users"/>
    </changeSet>
    <changeSet id="0001-24" author="hungpd">
        <addForeignKeyConstraint baseColumnNames="role_id" baseTableName="users" constraintName="FK_USERS_ON_ROLE"
                                 referencedColumnNames="role_id" referencedTableName="role"/>
    </changeSet>
    <changeSet id="0001-25" author="hungpd">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="user_session"
                                 constraintName="FK_USER_SESSION_ON_USER" referencedColumnNames="user_id"
                                 referencedTableName="users"/>
    </changeSet>
    <changeSet id="0001-26" author="hungpd">
        <loadData tableName="author" file="db/changelog/fake-data/author.csv"/>
        <loadData tableName="publisher" file="db/changelog/fake-data/publisher.csv"/>
        <loadData tableName="category" file="db/changelog/fake-data/category.csv"/>
        <loadData tableName="book" file="db/changelog/fake-data/book.csv"/>
    </changeSet>
</databaseChangeLog>